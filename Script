local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Killer Hub | The Sewers",
   Icon = 0,
   LoadingTitle = "Killer Hub",
   LoadingSubtitle = "by gou9907 on discord",
   ShowText = "Killer Hub",
   Theme = "Default",
   ToggleUIKeybind = "K",

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = true,
      Invite = "TxvFuct5F2",
      RememberJoins = true
   },

   KeySystem = true,
   KeySettings = {
      Title = "Killer Hub Key System",
      Subtitle = "Key System Get The Key From The Discord",
      Note = "Join our discord for the key. https://discord.gg/TxvFuct5F2",
      FileName = "KeyThatIsSigmaTbh",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"erytiubnfdssdfrl"}
   }
})

local AutoFarmTab = Window:CreateTab("Player", 4483362458)

local gearCollectorRunning = false
local gearCollectorConnection

local Toggle = AutoFarmTab:CreateToggle({
   Name = "AutoFarm Gears",
   CurrentValue = false,
   Flag = "Toggle1",
   Callback = function(Value)
      local player = game.Players.LocalPlayer
      local character = player.Character or player.CharacterAdded:Wait()
      local collectionRadius = 100000

      gearCollectorRunning = Value

      if Value then
         gearCollectorConnection = game:GetService("RunService").RenderStepped:Connect(function()
            for _, gear in pairs(workspace:GetChildren()) do
               if gear:IsA("Part") and gear.Name == "Gear" and character and character:FindFirstChild("HumanoidRootPart") then
                  local distance = (character.HumanoidRootPart.Position - gear.Position).Magnitude
                  if distance <= collectionRadius then
                     gear.CFrame = character.HumanoidRootPart.CFrame
                  end
               end
            end
         end)
      else
         if gearCollectorConnection then
            gearCollectorConnection:Disconnect()
            gearCollectorConnection = nil
         end
      end
   end,
})
